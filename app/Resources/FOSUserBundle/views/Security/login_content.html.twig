{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" class="form-horizontal" method="post" role="form">
    <h2 class="text-center">Авторизация</h2>
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <div class="form-group">
        <label for="username" class="col-sm-2 control-label">{{ 'security.login.username'|trans }}</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="username" name="_username" placeholder="Имя пользователя или E-mail" value="{{ last_username }}" required="required" />
        </div>
    </div>
    <div class="form-group">
        <label for="password" class="col-sm-2 control-label">{{ 'security.login.password'|trans }}</label>
        <div class="col-sm-10">
            <input type="password" class="form-control" id="password" placeholder="Ваш пароль" name="_password" required="required" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
            <div class="checkbox">
                <label>
                    <label for="remember_me">
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />{{ 'security.login.remember_me'|trans }}
                    </label>
            </div>
        </div>
    </div> <!-- /.form-group -->

    <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
            <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="btn btn-primary btn-block"/>
        </div>
    </div>
</form>
